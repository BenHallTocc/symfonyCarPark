{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CarPark</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Maxheight</th>
                <td>{{ entity.maxHeight }}</td>
            </tr>
            <tr>
                <th>Numberofcarspaces</th>
                <td>{{ entity.numberOfCarSpaces }}</td>
            </tr>
            <tr>
                <th>Numberoflorryspaces</th>
                <td>{{ entity.numberOfLorrySpaces }}</td>
            </tr>
            <tr>
                <th>Numberofmotorbikespaces</th>
                <td>{{ entity.numberOfMotorbikeSpaces }}</td>
            </tr>
            <tr>
                <th>Maxstay</th>
                <td>{{ entity.maxStay }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('carpark') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('carpark_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
