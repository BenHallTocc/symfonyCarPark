{% extends '::base.html.twig' %}
{% block title %}Driver List{% endblock %}

{% block body -%}
    <h1>Driver List</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Driving License No.</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('driver_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.drivingLicenseNumber }}</td>
                <td>
                    <a class="btn btn-default btn-xs" href="{{ path('driver_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-default btn-xs" href="{{ path('driver_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-default" href="{{ path('driver_new') }}">
            New Driver
        </a>
    {% endblock %}
