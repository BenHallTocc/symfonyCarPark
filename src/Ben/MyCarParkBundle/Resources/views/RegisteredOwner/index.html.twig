{% extends '::base.html.twig' %}
{% block title %}Registered Owner List{% endblock %}

{% block body -%}
    <h1>Registered Owner List</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('registeredowner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.email }}</td>
                <td>
                    <a class="btn btn-default btn-xs" href="{{ path('registeredowner_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-default btn-xs" href="{{ path('registeredowner_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a class="btn btn-default" href="{{ path('registeredowner_new') }}">
            New Registered Owner
        </a>
    {% endblock %}
